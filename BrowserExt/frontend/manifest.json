
{
    "manifest_version": 3,
    "name": "AutoQuote Browser Extension",
    "version": "1.0",
    "description": "Generate pop culture quotes in seconds!",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": [
      "http://127.0.0.1:5000/"
    ]
  }
  